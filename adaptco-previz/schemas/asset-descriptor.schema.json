{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.adaptco.io/asset-descriptor.schema.json",
  "title": "AssetDescriptor",
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "name", "type", "sourcePath", "params"],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "type": {
      "type": "string",
      "minLength": 1
    },
    "sourcePath": {
      "type": "string",
      "minLength": 1
    },
    "params": {
      "type": "object",
      "additionalProperties": true
    }
  }
}
