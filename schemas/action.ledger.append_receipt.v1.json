{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "action.ledger.append_receipt.v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["trace_id", "receipt", "request_hash"],
  "properties": {
    "trace_id": { "type": "string", "minLength": 8 },
    "request_hash": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
    "receipt": {
      "type": "object",
      "additionalProperties": true,
      "description": "Receipt payload to append in canonical JSON form."
    }
  }
}
