    "adapter_id",
    "plan_id",
    "candidate_id",
    "payload",
    "created_at"
  ],
  "additionalProperties": false,
  "properties": {
    "adapter_id": {
      "type": "string",
      "minLength": 1
    },
    "plan_id": {
      "type": "string",
      "minLength": 1
    },
    "candidate_id": {
      "type": "string",
      "minLength": 1
    },
    "payload": {
      "type": "object",
      "description": "Adapter-specific release plan payload.",
      "additionalProperties": true
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "metadata": {
      "type": "object",
      "additionalProperties": {
        "type": ["string", "number", "integer", "boolean", "null"]
      }
    }
  }
}
