{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Adapter Plan Release Candidate Output v1",
  "type": "object",
  "required": [
    "adapter_id",
    "plan_id",
    "candidate_id",
    "status",
    "decided_at"
  ],
  "additionalProperties": false,
  "properties": {
    "adapter_id": {
      "type": "string",
      "minLength": 1
    },
    "plan_id": {
      "type": "string",
      "minLength": 1
    },
    "candidate_id": {
      "type": "string",
      "minLength": 1
    },
    "status": {
      "type": "string",
      "enum": ["approved", "rejected", "needs_review"]
    },
    "summary": {
      "type": "string"
    },
    "decided_at": {
      "type": "string",
      "format": "date-time"
    },
    "artifacts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "uri"],
        "additionalProperties": false,
        "properties": {
          "name": {"type": "string"},
          "uri": {"type": "string"},
          "sha256": {"type": "string"}
        }
      }
    }
  }
}
