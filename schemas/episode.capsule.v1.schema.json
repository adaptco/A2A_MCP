{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Episode Capsule v1",
  "type": "object",
  "required": [
    "schema_version",
    "episode_id",
    "seed",
    "genesis",
    "inputs",
    "outcomes",
    "hashes"
  ],
  "additionalProperties": false,
  "properties": {
    "schema_version": {
      "const": "episode.capsule.v1"
    },
    "episode_id": {
      "type": "string"
    },
    "seed": {
      "type": "string"
    },
    "genesis": {
      "type": "object",
      "required": ["state_hash", "timestamp_utc"],
      "additionalProperties": true,
      "properties": {
        "state_hash": { "type": "string" },
        "timestamp_utc": { "type": "string", "format": "date-time" }
      }
    },
    "inputs": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["input_hash", "timestamp_utc"],
        "additionalProperties": true,
        "properties": {
          "input_hash": { "type": "string" },
          "timestamp_utc": { "type": "string", "format": "date-time" }
        }
      }
    },
    "outcomes": {
      "type": "object",
      "required": ["status", "summary_hash"],
      "additionalProperties": true,
      "properties": {
        "status": { "type": "string" },
        "summary_hash": { "type": "string" }
      }
    },
    "hashes": {
      "type": "object",
      "required": ["input_chain", "output_hash", "ledger_hash"],
      "additionalProperties": true,
      "properties": {
        "input_chain": { "type": "string" },
        "output_hash": { "type": "string" },
        "ledger_hash": { "type": "string" }
      }
    }
  }
}
