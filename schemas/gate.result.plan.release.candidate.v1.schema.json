{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Gate Result Plan Release Candidate v1",
  "type": "object",
  "required": [
    "gate_id",
    "status",
    "evaluated_at"
  ],
  "additionalProperties": false,
  "properties": {
    "gate_id": {
      "type": "string",
      "minLength": 1
    },
    "status": {
      "type": "string",
      "enum": ["pass", "fail"]
    },
    "evaluated_at": {
      "type": "string",
      "format": "date-time"
    },
    "violations": {
      "type": "array",
      "items": {"type": "string"}
    },
    "metrics": {
      "type": "object",
      "additionalProperties": {
        "type": ["string", "number", "integer", "boolean"]
      }
    }
  }
}
