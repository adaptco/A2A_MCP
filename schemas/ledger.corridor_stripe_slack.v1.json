{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ledger.corridor_stripe_slack.v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema",
    "event",
    "trace_id",
    "repo",
    "pr_id",
    "verdict",
    "physics_context"
  ],
  "properties": {
    "schema": { "type": "string", "const": "corridor-stripe-slack/v1" },
    "event": { "type": "string", "const": "REVIEW_DECIDED" },
    "trace_id": { "type": "string", "minLength": 8 },
    "repo": { "type": "string", "minLength": 1 },
    "pr_id": { "type": "string", "minLength": 1 },
    "verdict": {
      "type": "object",
      "additionalProperties": false,
      "required": ["outcome", "operator", "operator_id", "timestamp"],
      "properties": {
        "outcome": { "type": "string", "minLength": 1 },
        "operator": { "type": "string", "minLength": 1 },
        "operator_id": { "type": "string", "minLength": 1 },
        "timestamp": { "type": "string", "format": "date-time" }
      }
    },
    "physics_context": {
      "type": "object",
      "additionalProperties": false,
      "required": ["run_id", "head_sha", "energy_signature"],
      "properties": {
        "run_id": { "type": "string", "minLength": 1 },
        "head_sha": { "type": "string", "pattern": "^[a-f0-9]{40}$" },
        "energy_signature": { "type": "string", "pattern": "^sha256:[a-f0-9]{64}$" }
      }
    }
  }
}
