{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Offline RL Episode Metadata v1",
  "type": "object",
  "required": [
    "schema_version",
    "episode_id",
    "intent_class",
    "phase_path",
    "tool_calls",
    "retrieval_depth",
    "outcome_score",
    "drift_flags"
  ],
  "additionalProperties": false,
  "properties": {
    "schema_version": {
      "const": "offline_rl.episode_metadata.v1"
    },
    "episode_id": {
      "type": "string"
    },
    "intent_class": {
      "type": "string"
    },
    "phase_path": {
      "type": "string"
    },
    "tool_calls": {
      "type": "array",
      "items": { "type": "string" }
    },
    "retrieval_depth": {
      "type": "integer",
      "minimum": 0
    },
    "outcome_score": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "drift_flags": {
      "type": "array",
      "items": { "type": "string" }
    },
    "origin_point_hash": {
      "type": "string"
    },
    "policy_version": {
      "type": "string"
    },
    "tool_surface_version": {
      "type": "string"
    },
    "rag_snapshot_hash": {
      "type": "string"
    },
    "timestamp_utc": {
      "type": "string",
      "format": "date-time"
    }
  }
}
